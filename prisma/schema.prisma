// Notes of Arkad is a personal finance and budgeting app

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id        String   @id @default(cuid())
  email     String?  @unique
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  profile Profile[]
}

model Profile {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  accountId String
  account   Account  @relation(fields: [accountId], references: [id])

  oneTimeBudget   OneTimeBudget[]
  recurringBudget RecurringBudget[]
  noBudget        NoBudget[]
}

model NoBudget {
  id        String  @id @default(cuid())
  profileId String
  profile   Profile @relation(fields: [profileId], references: [id])

  expenses Expense[]
}

model OneTimeBudget {
  id        String   @id @default(cuid())
  title     String
  icon      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  profileId String
  profile   Profile  @relation(fields: [profileId], references: [id])

  OneTimeBudgetItem OneTimeBudgetItem[]
}

model OneTimeBudgetItem {
  id              String        @id @default(cuid())
  title           String
  icon            String
  amount          Float
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  oneTimeBudgetId String
  oneTimeBudget   OneTimeBudget @relation(fields: [oneTimeBudgetId], references: [id])

  expenses Expense[]
}

enum RecurringPeriod {
  DAILY
  WEEKLY
  MONTHLY
  YEARLY
}

model RecurringBudget {
  id              String          @id @default(cuid())
  title           String
  icon            String
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  recurringPeriod RecurringPeriod
  recurringAmount Float
  profileId       String
  profile         Profile         @relation(fields: [profileId], references: [id])

  expenses Expense[]
}

model Expense {
  id        String   @id @default(cuid())
  title     String
  amount    Float
  date      DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  recurringBudgets  RecurringBudget[]
  oneTimeBudgetItem OneTimeBudgetItem[]
  noBudget          NoBudget[]
}
